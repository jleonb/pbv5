<p id="notice"><%= notice %></p>

<h1>Listing Slider Bells</h1>

<table>
  <thead>
    <tr>
      <th>Img</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slider_bells.each do |slider_bell| %>
      <tr>
        <td><%= image_tag slider_bell.img.url (:thumb) %></td>
        <td><%= slider_bell.link %></td>
        <td><%= link_to 'Show', slider_bell %></td>
        <td><%= link_to 'Edit', edit_slider_bell_path(slider_bell) %></td>
        <td><%= link_to 'Destroy', slider_bell, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

