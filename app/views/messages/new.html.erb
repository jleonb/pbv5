<p id="notice"><%= notice %></p>
<div class="container">
  <br>
  <h5 class="center">COMPLETE EL FORMULARIO</h5>
  <br>
  <%= form_for @message, url: contact_path do |message_form| %>
  <div class="field">
    <%= message_form.text_field :rut, placeholder: "Rut" %>
  </div>
  
  <div class="field">
    <%= message_form.text_area :content, placeholder: "Mensaje..."%>
  </div>
  <br>
  <div class="actions center">
    <span class="waves-effect waves-light btn">
      <i class="material-icons left">launch</i>
      <%= message_form.submit "ENVIAR" %>
    </span>
    <%= link_to current_user do %>
      <span class="waves-effect waves-light btn"><i class="material-icons left">arrow_back</i>ATRAS</span>
  <% end %>
  </div>
  <br><br>
  <% end %>
</div>