<p id="notice"><%= notice %></p>

<h1>Listing Institucions</h1>

<table>
  <thead>
    <tr>
      <th>N contrato</th>
      <th>Nombre</th>
      <th>Rut</th>
      <th>Direccion</th>
      <th>Comuna</th>
      <th>Ciudad</th>
      <th>Contacto</th>
      <th>Telefono</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @institucions.each do |institucion| %>
      <tr>
        <td><%= institucion.n_contrato %></td>
        <td><%= institucion.users.count %></td>
        <td><%= institucion.nombre %></td>
        <td><%= institucion.rut %></td>
        <td><%= institucion.direccion %></td>
        <td><%= institucion.comuna %></td>
        <td><%= institucion.ciudad %></td>
        <td><%= institucion.contacto %></td>
        <td><%= institucion.telefono %></td>
        <td><%= institucion.email %></td>
        <td><%= link_to 'Show', institucion %></td>
        <td><%= link_to 'Edit', edit_institucion_path(institucion) %></td>
        <td><%= link_to 'Destroy', institucion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

