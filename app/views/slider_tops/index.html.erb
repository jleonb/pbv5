<p id="notice"><%= notice %></p>

<h1>Listing Slider Tops</h1>

<table>
  <thead>
    <tr>
      <th>Link</th>
      <th>Img</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slider_tops.each do |slider_top| %>
      <tr>
        <td><%= slider_top.link %></td>
        <td><%= slider_top.img %></td>
        <td><%= link_to 'Show', slider_top %></td>
        <td><%= link_to 'Edit', edit_slider_top_path(slider_top) %></td>
        <td><%= link_to 'Destroy', slider_top, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Slider top', new_slider_top_path %>
