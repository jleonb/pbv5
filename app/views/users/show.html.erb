<div class="container">
	<br>
	<div id="slider_top">
		<% @slider_tops.each do |slider_top| %>
		<a href="<%= slider_top.link.institucion %>"><img src="<%= slider_top.img.url(:large).institucion %>" class="responsive-img"></a>
		<% end %>
	</div>
	
	<br>
	<div class="center">
		<%= link_to "/contact" do %>
		<span class="waves-effect waves-light btn"><i class="material-icons left">person_pin</i>CONTACTAR EJECUTIVO</span>
		<% end %>
	</div>
</div>
<script type="text/javascript">
	$(document).ready(function(){
		$('#slider_top').slick({
			autoplay: true,
			autoplaySpeed: 2000,
			arrows: false,
			draggable: true,
			mobileFirst: true,
			responsive: true,
		});
	});
</script>